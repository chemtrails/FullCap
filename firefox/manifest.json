{
    "manifest_version": 2,
    "name": "FullCap - Full Page Capture",
    "version": "0.1",
    "description": "Screen capture the entire page",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_title": "FullCap - Full Page Capture",
        "default_icon": "/icons/icon.png",
        "default_popup": "/popup/popup.html"
    },
    "icons": {
        "16": "/icons/icon16.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "permissions": [
        "tabs",
        "<all_urls>"
    ]
}