{
  "name": "FullCap - Full Page Capture",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Screen capture the entire page",
  "action": {
    "default_title": "FullCap - Full Page Capture",
    "default_icon": "/icons/icon.png",
    "default_popup": "/popup/popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      }
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}